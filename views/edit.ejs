<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Product - StockMaster</title>
 <link rel="stylesheet" href="/css/edit.css">
</head>
<body>
  <!-- Navbar -->
  <nav>
    <div class="logo">StockMaster</div>
    <div id="items">
      <button>Help</button>
    </div>
  </nav>

  <div id="section">
    <!-- Sidebar -->
    <aside id="secOne">
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/dashboard">Dashboard</a></li>
        <li><a href="/products">Add Product</a></li>
        <li><a href="/budget">Budget</a></li>
        <li><a href="/aboutus">About Us</a></li>
        <li><a href="/activity">Activity</a></li>
      </ul>
    </aside>

    <!-- Main Content -->
    <main id="secTwo">
      <h1 class="page-header">Edit Product</h1>
      
      <div class="form-container">
        <div class="product-info">
          <p><strong>Name:</strong> <%= correctData.name %></p>
          <p><strong>Code:</strong> <%= correctData.code %></p>
        </div>

        <form method="post" action="/edits/<%= correctData.code %>">
          <div class="form-group">
            <label for="category">Category</label>
            <select name="category" required>
                <option value="">Select category</option>
                <option value="Electronics">Electronics</option>
                <option value="Clothing">Clothing</option>
                <option value="Groceries">Groceries</option>
                <option value="Furniture">Furniture</option>
                <option value="Other">Other</option>
              </select>
          </div>

          <div class="form-group">
            <label for="price">Price ($)</label>
            <input name="price" type="number" id="price" value="<%= correctData.price %>"  required placeholder="0.00">
          </div>

          <div class="form-group">
            <label for="quantity">Quantity in Stock</label>
            <input name="quantity" type="number" id="quantity" value="<%= correctData.quantity %>" required placeholder="0">
          </div>

          <div class="form-group">
            <label for="supplier">Supplier</label>
            <input name="supplier" type="text" id="supplier" value="<%= correctData.supplier %>" placeholder="Enter supplier name">
          </div>

          <div class="form-group">
            <label for="description">Description</label>
            <textarea name="description" id="description" placeholder="Enter product description"><%= correctData.description %></textarea>
          </div>

          <button type="submit">Update Product</button>
        </form>
      </div>
    </main>
  </div>
</body>
</html>